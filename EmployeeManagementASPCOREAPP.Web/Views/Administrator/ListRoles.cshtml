@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "All Roles";
}

<h1>All Roles</h1>
@if (Model.Any())
{
    <a class="btn btn-primary " style="width:auto " asp-controller="Administrator" asp-action="CreateRole">
        Create Role
    </a>
    foreach (var role in Model)
    {
        <div class="card mb-3">
            Role Id: @role.Id
        </div>
        <div class="card-body ">
            <h5 class="card-title">@role.Name  </h5>
        </div>
        <div class="card-footer ">
            <a asp-controller="Administrator" asp-action="EditRole" asp-route-roleid="@role.Id" class="btn btn-primary ">Edit</a>
            <a asp-controller="Administrator" asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger ">Delete</a>
        </div>

    }
}
else
{
    <div class="card ">
        <div class="card-header ">
            No roles created yet
        </div>
        <div class="card-body ">
            <h5 class="card-title ">
                Use the button below to creat role
            </h5>
            <a class="btn btn-primary " style="width:auto " asp-controller="Administrator" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}

